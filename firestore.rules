
/**
 * @fileoverview Firestore Security Rules for Learn & Shop.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles, cart data, orders, and enrollments,
 * while allowing public read access to product, course, and vendor information.
 *
 * Data Structure:
 * - Users: /users/{userId}
 * - Vendors: /vendors/{vendorId}
 * - Products: /products/{productId}
 * - Courses: /courses/{courseId}
 * - Cart: /users/{userId}/cart/{cartItemId}
 * - Orders: /users/{userId}/orders/{orderId}
 * - Enrollments: /users/{userId}/enrollments/{enrollmentId}
 * - Addresses: /users/{userId}/addresses/{addressId}
 *
 * Key Security Decisions:
 * - Users can only access their own user documents and related data (cart, orders, enrollments, addresses).
 * - Product, Course, and Vendor information is publicly readable but requires backend management for CUD operations.
 * - All write operations are validated against the authenticated user's ID.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isLearner(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'learner';
    }
    
    function isVendor(userId) {
       return get(/databases/$(database)/documents/users/$(userId)).data.role == 'vendor';
    }

    function isExistingOwner(userId) {
      return isSignedIn() && isOwner(userId) && resource != null;
    }

    match /users/{userId} {
      allow get, update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow delete: if isSignedIn() && isOwner(userId);
      allow list: if false; 
    }

    match /vendors/{vendorId} {
      allow get, list: if true;
      // Allow a user to create their own vendor document if they are signed in,
      // their UID matches the document ID, and their role is 'vendor'.
      allow create: if isSignedIn() && isOwner(vendorId) && isVendor(vendorId);
      allow update: if isSignedIn() && isOwner(vendorId) && isVendor(vendorId);
      allow delete: if false; // For now, prevent deletes from client
    }

    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    match /users/{userId}/cart/{cartItemId} {
      allow read: if isSignedIn() && isOwner(userId);
      allow write: if isSignedIn() && isOwner(userId);
    }
    
    match /users/{userId}/addresses/{addressId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    match /users/{userId}/orders/{orderId} {
      allow read: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update, delete: if false; // Only allow order creation for now
    }

    match /users/{userId}/enrollments/{enrollmentId} {
      allow read: if isSignedIn() && isOwner(userId);
      allow create, update, delete: if false; // Enrollments managed by backend/functions
    }
  }
}
